<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="pisecurity"
	packages="">
	<Properties>
		<Property name="log4jlogfilename">logs/pisecurity.log</Property>
	</Properties>
	<Appenders>

		<!-- <Appender type="Console" name="STDOUT"> <Filters> <Filter type="ThresholdFilter" 
			level="INFO" onMatch="ACCEPT" onMismatch="DENY" /> </Filters> <Layout type="PatternLayout" 
			pattern="%d [%-6p] %t – %m - %C{1}.%M(%F:%L)%n" /> </Appender> -->

		<RollingFile name="File" fileName="${log4jlogfilename}"
			filePattern="${log4jlogfilename}.%d{yyyy-MM-dd}.log.gz"
			ignoreExceptions="false">
			<Filters>
				<Filter type="ThresholdFilter" level="INFO" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<PatternLayout>
				<Pattern>%d [%-6p] %t – %m - %C{1}.%M(%F:%L)%n</Pattern>
			</PatternLayout>
			<TimeBasedTriggeringPolicy />
		</RollingFile>


		<RollingFile name="EventsFile"
			filePattern="events/%d{yyyy}/%d{MM}/events.%d{yyyy-MM-dd}.log.gz"

			ignoreExceptions="true">
			<Filters>
				<Filter type="ThresholdFilter" level="INFO" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<PatternLayout>
				<Pattern>%d,%m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>


	</Appenders>

	<Loggers>

		<AsyncLogger name='' level="info" includeLocation="true">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="File" />
		</AsyncLogger>
		<AsyncLogger name='Events' level="info" includeLocation="true">
			<AppenderRef ref="EventsFile" />
		</AsyncLogger>
	</Loggers>

</Configuration>